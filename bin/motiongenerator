#!/usr/bin/env macruby
require "../lib/OBJCHeaderToRubyGenerator.rb"

def usage
    puts "motiongenerator [path to objective-c header] [path for generated ruby class file]"
    puts "example: motiongenerator ~/Project/ObjcProject/Foo.h ~/Project/RubyMotionProject/app"
    exit 1
end

if ARGV.first
    
    useage if ARGV.count != 2
    
    header = ARGV.first
    usage if header == nil
    dest = ARGV.last
    usage if dest == nil
    
    gen = OBJCHeaderToRubyGenerator.new(header, dest)
    gen.generate
    exit 0
end
